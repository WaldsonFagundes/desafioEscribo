
 int somaDosDivisiveis(int valor) {
    
    int soma = 0;
    
  for (int i = valor - 1; i > 0; i--) {
      if (i % 3 == 0 || i % 5 == 0) {
        soma += i;
      }
    }
    
   return soma;
   
}


void main() {
  
// Altere o valor de entrada da função para somar os números inteiros
// divisíveis por 3 ou 5 que sejam inferiores ao valor da entrada.
  print(somaDosDivisiveis(10));
  
 }
